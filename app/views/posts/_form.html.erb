<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "ckeditor" %>
  </div>
  <div class="field">
    <%= f.label :meta_title %><br>
    <%= f.text_field :meta_title %>
  </div>
  <div class="field">
    <%= f.label :meta_description %><br>
    <%= f.text_area :meta_description %>
  </div>
  <div class="field">
    <%= f.label :type %><br>
    <%= f.text_area :type %>
  </div>
  <div class="field">
    <%= f.label :excerpt %><br>
    <%= f.text_area :excerpt %>
  </div>
  <div class="field">
    <%= f.label :format_post %><br>
    <%= f.select :format_post, %w{ Male Female }, {:prompt => "Gender..."} %>
  </div>
  <div class="field">
    <%= f.label :hide_post %><br>
    <%= f.check_box :hide_post %>
  </div>
  <div class="field">
    <%= f.label :ads %><br>
    <%= f.text_area :ads %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.text_field :category_id %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.text_field :user_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
